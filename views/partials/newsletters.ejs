<script>
  document.addEventListener('readystatechange', (evt) => {

   function subscribeNewsletters(email) {
    console.log("Ajax envoyÃ©");
    $.ajax({
      url: "/subscribe_to_news_letters",
      type: "POST",
      data: {"email": email},
      contentType: "application/json",
      complete: () => {
        console.log("Reussi");
      },
      error: () => {
        console.log("Erreur serveur");
      }
    })
  
   }

  var btn_newsletters_form_submit = document.getElementById("btn_newsletters_form_submit");

  btn_newsletters_form_submit.addEventListener("click", (evt) => {
    var email = document.getElementById("newsletter_form_email").value;
    subscribeNewsletters(email);
  });

  });
 
</script>

